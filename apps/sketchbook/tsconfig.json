{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/.prisma"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "skipLibCheck": true,
    "strict": false,
    "noEmitOnError": false
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}